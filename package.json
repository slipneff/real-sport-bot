  "scripts": {
    "dev": "NODE_ENV=DEV DOTENV_CONFIG_PATH=.env.dev ts-node -r dotenv/config -r tsconfig-paths/register ./src/index.ts",
    "watch": "nodemon",
    "prod": "npx tsc && NODE_ENV=PROD DOTENV_CONFIG_PATH=.env.prod TS_NODE_BASEURL=./dist node -r dotenv/config -r tsconfig-paths/register ./dist/src/index.js",
    "format": "eslint --cache --fix ."
  },
  "dependencies": {
    "@babel/core": "^7.19.0",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.19.0",
    "dotenv": "^16.0.2",
    "excel4node": "^1.8.0",
    "express": "^4.18.1",
    "signale": "^1.4.0",
    "telegraf": "3.38.0",
    "xenous-logs": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.16",
    "@types/signale": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "signale": {
    "displayDate": false,
    "displayTimestamp": true,
    "displayFilename": false,
    "displayScope": false,
    "displayBadge": true,
    "displayLabel": true,
    "uppercaseLabel": false,
    "underlineLabel": true,
    "underlinePrefix": false,
    "underlineMessage": false,
    "underlineSuffix": false
  }
}
